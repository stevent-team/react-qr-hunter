{
  "compilerOptions": {
    "paths": {
      "react-qr-hunter": ["./lib/index.tsx"] // Allows importing library from realistic path in demo
    },
    "target": "ESNext",
    "jsx": "react-jsx",
    "module": "ES2022",
    "moduleResolution": "node",
    "types": ["node", "vite/client"],
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true
  }
}
